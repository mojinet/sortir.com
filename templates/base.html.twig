<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header class="l_header">
            <h1><a href="{{ path('main_home') }}">Sortir.com</a></h1>
            <nav class="header_nav">
                <ul>
                    <li><a href="{{ path('main_home') }}">Accueil</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('profil_home') }}">Mon profil</a></li>

                        {% if is_granted("ROLE_ADMIN") %}
                            <li><a href="{{ path('admin_home') }}">Admin</a></li>
                        {% endif %}

                        <li><a href="{{ path('app_logout') }}">Se deconnecter</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                        <li><a href="{{ path('app_register') }}">S'inscrire</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
