{% extends 'base.html.twig' %}

{% block body %}
    <div class="fullFlex">
        <div>
            <h2>
                <h2>{{ sortie.nom }}
                {% if sortie.etat.libelle is same as ('Annuler') %}
                    annulée :(</h2>
                    <p>Motif : {{ sortie.infosSortie }}</p>
                {% else %}
                </h2>
                <li class="miniTitle">Date et heure de la sortie : <span class="miniDescription"><br> <span class="tabulation"></span>{{ sortie.dateHeureDebut | date }}</span></li>
                <li class="miniTitle">Date limite d'inscription : <span class="miniDescription"><br> <span class="tabulation"></span>{{ sortie.dateLimiteInscription | date }}</span></li>
                <hr>
                <li class="miniTitle">Nombre de places : <span class="miniDescription">{{ sortie.nbInscriptionMax }}</span></li>
                <li class="miniTitle">Durée : <span class="miniDescription">{{ sortie.duree }} mn</span></li>
                <li class="miniTitle">Description et infos : <span class="miniDescription"><br> <span class="tabulation"></span>{{ sortie.infosSortie }}</span></li>
                <li class="miniTitle">Campus: <span class="miniDescription">{{ sortie.campus.nom }}</span></li>
                <hr>
                <li class="miniTitle">Adresse :</li>
                <li class="miniDescription"><span class="tabulation"></span>{{ sortie.lieu.nom }}</li>
                <li class="miniDescription"><span class="tabulation"></span>{{ sortie.lieu.rue }}</li>
                <li class="miniDescription"><span class="tabulation"></span>{{ sortie.lieu.ville.codePostal }}{{ sortie.lieu.ville.nom }}</li>
                <li class="miniTitle">Coordonnées GPS :<span class="miniDescription">{{ sortie.lieu.latitude }}/{{ sortie.lieu.longitude }}</span></li>
                {% endif %}
            </ul>
        </div>
        <img src="{{ asset('img/icon/Campfire-amico.png') }}" alt="">
    </div>

    {% if app.user and sortie.organisateur.id == app.user.id and sortie.etat.libelle != 'Annuler' %}
        <a href="{{ path('sortie_canceled', {'id': sortie.id}) }}"><button type="submit" class="btn">Annuler la sortie</button></a>
        <a href="{{ path('sortie_edit', {'id': sortie.id}) }}"><button type="submit" class="btn">Modifier</button></a>
    {% endif %}

    {% if sortie.participants|length != null %}
        <table class="table table-sm">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Pseudo</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in sortie.participants %}
            <tr>
                <td><a href="{{ path('profil_home', {'id': participant.id}) }}">{{ participant.nom }}</a></td>
                <td> {{ participant.pseudo }}</td>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}


{% endblock %}

{% block title %}
    {{ parent() }} | {{ sortie.nom }}
{% endblock %}

