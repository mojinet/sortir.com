{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <ul>
            <li>Nom de la sortie : {{ sortie.nom }}</li>
            <li>Date et heure de la sortie : {{ sortie.dateHeureDebut | date }}</li>
            <li>Date limite d'inscription : {{ sortie.dateLimiteInscription | date }}</li>
            <li>Nombre de places : {{ sortie.nbInscriptionMax }}</li>
            <li>Dur√©e : {{ sortie.duree | date }}</li>
            <li>Description et infos : {{ sortie.infosSortie }}</li>
            <li>Campus : {{ sortie.campus.nom }}</li>
            <li>Lieu : {{ sortie.lieu.nom }}</li>
            <li>Rue : {{ sortie.lieu.rue }}</li>
            <li>Ville : {{ sortie.lieu.ville.nom }}</li>
            <li>Code postal : {{ sortie.lieu.ville.codePostal }}</li>
            <li>Latitude : {{ sortie.lieu.latitude }}</li>
            <li>Longitude : {{ sortie.lieu.longitude }}</li>
        </ul>
    </div>

    <div>
        {% for participant in sortie.participants %}
            {{ participant.nom }}
            {{ participant.pseudo }}
        {% endfor %}
    </div>
{% endblock %}

{% block title %}
    {{ sortie.nom }} | {{ parent() }}
{% endblock %}

