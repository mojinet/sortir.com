{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Accueil{% endblock %}

{% block body %}
    <h2>Liste des sorties</h2>
    <div class="filterForm">
        {{ form_start(filterForm) }}
        {{ form_widget(filterForm) }}

        {{ form_end(filterForm) }}
    </div>
    <table class="table table-sm mainTable">
    <thead>
    <tr>
        <th scope="col">Nom de la sortie</th>
        <th scope="col" >Date sortie</th>
        <th scope="col" >Date de cloture</th>
        <th scope="col">Inscrits/Places</th>
        <th scope="col">Etat</th>
        <th scope="col" class="d-none d-lg-table-cell">Organisateur</th>
        <th scope="col" class="d-none d-sm-table-cell">Actions</th>
    </tr>
    </thead>
    <tbody>
        {% for sortie in sorties %}
                <tr class="sortieLine">
                    <td><a href="{{ path('sortie_details', {'id': sortie.id}) }}">{{ sortie.nom }}</a></td>
                    <td class="d-none d-sm-table-cell">{{ sortie.dateHeureDebut|date('F jS \\a\\t g:ia', 'Europe/Paris')  }}</td>
                    <td class="d-none d-sm-table-cell">{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                    <td ><span class="participants-length"  onclick="sortParticipants();">{{ sortie.participants|length }}</span>/{{ sortie.nbInscriptionMax }}</td>
                    <td>{{ sortie.etat.libelle }}</td>
                    <td class="d-none d-lg-table-cell"><a href="{{ path('profil_home', {'id': sortie.organisateur.id}) }}">{{ sortie.organisateur.pseudo }}</a></td>
                    <td class="d-none d-sm-table-cell">
                        {% if sortie.dateHeureDebut > date('now', '- 30 days') %}
                            <a href="{{ path('sortie_details', {'id': sortie.id}) }}">Afficher</a>
                        {% endif %}

                        {% if app.user %}
                            {% if imIn[sortie.id] %}
                                {% if sortie.dateHeureDebut > date('now') %}
                                    <a href="{{ path('main_desister', {'id': sortie.id}) }}">Se desister</a>
                                {% endif %}
                            {% else %}
                                {% if sortie.dateLimiteInscription > date('now') and sortie.nbInscriptionMax > sortie.participants|length %}
                                    <a href="{{ path('main_participe', {'id': sortie.id}) }}">S'inscrire</a>
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
        {% else %}
            <p>Aucune sortie de pr√©vu !</p>
        {% endfor %}
    </tbody>
    </table>
    {% if app.user %}
        <button class="btn size_btn"><a href="{{ path('sortie_create') }}">Ajouter une sortie</a></button>
    {% endif %}
    <div class="navigation">
        {{ knp_pagination_render(sorties) }}
    </div>

{% endblock %}
